<section id="articles">
  <% for article in articles[0...5] %>
    <article class="post  clearfix">
      <header class="post_header" >
        <h3 class="post_title"><a href="<%= article.path %>"><%= article.title %></a></h3>
        <div class="post_info info">
          作者：<span class="post_at"><%= article.author %></span> | 
        	发表于：<span class="post_at"><%= Date.parse(article.date).strftime("%Y-%m-%d") %></span> | 
        	标签：<% article.tags.each do |tag|%>
				<% flag = true %>
				<% @config[:tags].each_with_index do |e,i| %>
					<% if (e == tag)&&flag %>
						<% flag = false %>
						<a href="/tag/<%=i%>" class="tag"><%=tag%></a>&nbsp;
					<% end %>
				<% end %>
			<%end%>
        </div>
      </header>

      <section class="post_body body">
        <%= article.summary %>
      <div class="more"><a href="<%= article.path %>">read on &raquo;</a></div>
      </section>
    </article>
  <% end %>
</section>

